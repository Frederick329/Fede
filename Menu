    cout << "" << endl;
    cout << "------------------------------------------------------------------------------------------------------------------------";
    cout << "                                               Comienza la 1ra Ronda" <<endl;
    cout << "------------------------------------------------------------------------------------------------------------------------" << endl;


    const int TAM = 6;
    int tirada[TAM];

    ///1er tirada
    cout << "Jugador: " << nombre <<endl;
    cout << "" << endl;
    generarTirada(tirada, TAM);
    mostrarTirada(tirada, TAM);
    int puntos = SumarTirada (tirada, TAM);
    int PuntosAct = puntos;
    cout << "La tirada sumo: " << puntos <<endl;
    cout << "Su puntuacion actual es: " << PuntosAct << endl;
    PressEnter();

    ///2da tirada
    cout << "Jugador: " << nombre <<endl;
    cout << "" << endl;
    generarTirada(tirada, TAM);
    mostrarTirada(tirada, TAM);
    puntos = SumarTirada (tirada, TAM);
    PuntosAct = PuntosAct + puntos;
    cout << "La tirada sumo: " << puntos <<endl;
    cout << "Su puntuacion actual es: " << PuntosAct << endl;
    PressEnter();

    ///3ra tirada
    cout << "Jugador: " << nombre <<endl;
    cout << "" << endl;
    generarTirada(tirada, TAM);
    mostrarTirada(tirada, TAM);
    puntos = SumarTirada (tirada, TAM);
    PuntosAct = PuntosAct + puntos;
    cout << "La tirada sumo: " << puntos <<endl;
    cout << "Su puntuacion actual es: " << PuntosAct << endl;
