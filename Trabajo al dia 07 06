int tirarDado(){
    return rand()% 6 + 1;
}

void generarTirada(int v[], int tam){
    for (int i= 0; i < tam; i++){
        v[i] = tirarDado();
    }
}

void mostrarTirada(int v[], int tam){
    for (int i= 0; i < tam; i++){
        cout << "Dado #" << i+1 << " :" << v[i] << endl;
    }

}

    int SumarTirada (int v[], int tam){
    int contador=0;
    for (int i = 0; i < tam; i++){
    contador += v[i];
            }

    return contador;
    }


    void tiradas (int v[], int tam){
        int contador;
        while (contador < 101){
        for (int i= 0; i < tam; i++){
        cout << "Dado #" << i+1 << " :" << v[i] << endl;
        }
        for (int i = 0; i < tam; i++){
        contador += v[i];
        }
        cout << "La Puntuacion es: " << contador << endl;
        cout << "------------------------------------------------------------------------------------------------------------------------" << endl;
    }
    }
